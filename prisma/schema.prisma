generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//user
model User {
  id String @id @default(cuid())
  clerkId String @unique
  email String @unique
  firstName String?
  lastName String?
  phone String?
  createdAt DateTime @default(now())  //member since jan 2026
  updatedAt DateTime @updatedAt  //member since jan 2026

  // Appointments
  appointments Appointment[]

  @@map("users")
}

//doctor
model Doctor {
  id String @id @default(cuid())
  name String
  email String @unique
  phone String
  speciality String
  bio String?
  imageurl String
  gender Gender
  isActive Boolean @default(true)
  createdAt DateTime @default(now())  //member since jan 2026
  updatedAt DateTime @updatedAt  //member since jan 2026

  // Appointments
  appointments Appointment[]

  @@map("doctors")
}

enum Gender {
  MALE
  FEMALE
}

// Appointment
model Appointment {
  id String @id @default(cuid())
  date DateTime
  time String
  duration Int @default(30) //duration in minutes
  status AppointmentStatus @default(CONFIRMED)
  notes String?
  reason String?
  createdAt DateTime @default(now())  //member since jan 2026
  updatedAt DateTime @updatedAt  //member since jan 2026

  //foreign key
  userId String
  doctorId String

  //relationShip
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@map("appointments")
}

enum AppointmentStatus {
  CONFIRMED
  COMPLETED
}